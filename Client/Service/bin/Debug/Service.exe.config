<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

	<appSettings>
		<add key="V_threshold" value="50"/>
		<add key="I_threshold" value="20"/>
		<add key="CurrentDeviationPercentage" value="25"/>
	</appSettings>
	
	<system.serviceModel>
		<services>
			<service name="Service.SmartGridService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4002"/>
					</baseAddresses>
				</host>
				<endpoint
					address="ServiceSmartGrid"
					binding="netTcpBinding"
					bindingConfiguration="LargeTcpBinding"
					contract="Common.ISmartGridService"/>
			</service>
		</services>

		<bindings>
			<netTcpBinding>
				<binding name="LargeTcpBinding"
						 maxReceivedMessageSize="2147483647"
						 maxBufferSize="2147483647"
						 maxBufferPoolSize="2147483647"
						 transferMode="Buffered"
						 sendTimeout="00:10:00"
						 receiveTimeout="00:10:00" />
			</netTcpBinding>
		</bindings>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="false" />
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		
	</system.serviceModel>
</configuration>